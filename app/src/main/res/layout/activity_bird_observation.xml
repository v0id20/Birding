<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/birb_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="birb name" />

    <TextView
        android:id="@+id/sci_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/birb_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="scientific birb name" />

    <TextView
        android:id="@+id/seen_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sci_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="seen at:" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seen_at"
        app:layout_constraintRight_toLeftOf="parent"
        tools:text="last seen:" />


</androidx.constraintlayout.widget.ConstraintLayout>